<html>
  <head>
  </head>

  <body>
    <% if @photos.any? %>
      <a href='photos/new'>Upload a photo</a>
      <% @photos.each do |photo| %>
        <ul>
          <li><h2><%= link_to photo.name, photo_path(photo) %> </h2>
          <%= image_tag restaurant.image.url(:thumb) %>
          <h3><%= link_to "Edit #{photo.name}", edit_photo_path(photo) %> </h3>
          <h3><%= link_to "Delete #{photo.name}", photo_path(photo), method: :delete %> </h3></li>
        </ul>
      <% end %>
    <% else %>
      </p><a href='photos/new'>Upload your first photo</a> and start sharing</p>
    <% end %>
  </body>
</html>
